{% extends 'base.html.twig' %}

{% block title %}Modifier un  Pokemon{% endblock %}

{% block body %}
    <h1>Modifier les attribut de votre Pokemon !</h1>
    <form method="post">
        <label for="name">Nom:</label>
        <input type="text" id="name" name="name" value="{{ pokemon.name }}" required>
        <label for="type">Type:</label>
        <input type="text" id="type" name="type" value="{{ pokemon.type }}" required>
        <button type="submit">Sauvegarder</button>
    </form>
    <a href="{{ path('app_pokemon_list') }}">Revenir au pokedex</a>
{% endblock %}