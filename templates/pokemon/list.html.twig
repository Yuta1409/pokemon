{% extends 'base.html.twig' %}

{% block title %}Pokedex{% endblock %}

{% block body %}
    <div class="pokemon-list">
        <h1>Pokedex</h1>
        <ul>
            {% for pokemon in pokemons %}
                <li>
                    <a href="{{ path('app_pokemon_show', {id: pokemon.id}) }}">{{ pokemon.name }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}